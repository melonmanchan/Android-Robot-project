<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.robotapp.Feed" >

    
        <com.example.robotapp.MjpegView
		android:id="@+id/videoFeed"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
    <com.example.robotapp.JoystickView
        android:id="@+id/rightJoystick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|bottom"
        />
    <com.example.robotapp.JoystickView
        android:id="@+id/leftJoystick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|bottom"
       
       	 />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:onClick="openMessagePrompt"
        android:text="Message"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="30dp" />"

</FrameLayout>